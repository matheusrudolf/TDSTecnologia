@model TDSTecnologia.Site.Core.Entities.Curso
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>CardCursoPartial</title>
</head>
<body>
    <div class="col-4" style="margin-top:10px;">
        <div class="card">
            <div class="card-body" style="min-height: 200px; max-height:200px;overflow-y: hidden;">
                <a asp-action="Detalhes" asp-route-id="@Model.Id">
                    <h5 class="card-title text-primary">@Model.Nome</h5>
                </a>
                <p class="card-text">
                    @Model.Descricao
                </p>
            </div>
            <div class="card-body">
                <a asp-action="Alterar" class="btn btn-sm btn-outline-info" asp-route-id="@Model.Id">Alterar</a>
                <a asp-action="Excluir" class="btn btn-sm btn-outline-danger" asp-route-id="@Model.Id">Excluir</a>
            </div>
            <div class="card-footer text-muted" style="padding : 0px; height:50px;">
                <table class="table table-bordered">
                    <tr>
                        <td>@Model.QuantidadeAula <small>Aulas</small></td>
                        <td>@Model.DataInicio.ToString("dd/MM/yyyy")</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</body>
</html>