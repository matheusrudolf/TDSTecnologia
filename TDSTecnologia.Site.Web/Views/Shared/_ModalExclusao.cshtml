<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/site/main.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.9.0/css/all.css" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/imagens/favicon.ico" rel="shortcut icon" />
</head>
<body>

    <div class="modal" id="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">Confirmar exclusão</h2>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h4>Prosseguir com a exclusão de <b class="Nome"></b>?</h4>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-success btn-lg" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-outline-danger btn-lg btnExcluir">Excluir</button>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
